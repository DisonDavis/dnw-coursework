<!DOCTYPE html><html><head><link rel="stylesheet" href="/style.css"><title>Organiser</title></head><body>
    <h1>Organiser Dashboard</h1>
    <h2><%= settings.site_name %></h2><p><%= settings.site_description %></p>
    <p><a href="/organiser/settings">Site Settings</a></p>
    <p><a href="/organiser/edit">+ Create New Event</a></p>
    
    <h3>All Events</h3>
    <table>
      <tr><th>Title</th><th>Date</th><th>Created</th><th>Published</th><th>Qty</th><th>Actions</th></tr>
      <% events.forEach(e => { %>
        <tr>
          <td><%= e.title %></td>
          <td><%= e.date %></td>
          <td><%= e.created_at %></td>
          <td><%= e.published_at || '–' %></td>
          <td><%= e.full_qty + e.conc_qty %></td>
          <td>
            <% if (!e.is_published) { %>
              <form action="/organiser/publish/<%= e.id %>" method="POST" style="display:inline"><button>Publish</button></form>
            <% } %>
            <a href="/organiser/edit/<%= e.id %>">Edit</a>
            <form action="/organiser/delete/<%= e.id %>" method="POST" style="display:inline"><button>Delete</button></form>
            <% if (e.is_published) { %>
              <a href="/attendee/event/<%= e.id %>" target="_blank">View</a>
            <% } %>
          </td>
        </tr>
      <% }) %>
    </table>
    
    <p><a href="/">← Home</a></p>
    </body></html>
    