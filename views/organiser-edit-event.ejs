<%- include('partials/header') %>
<h1>Edit Event</h1>
<form action="/organiser/edit/<%= event.id %>" method="POST">
  <div class="mb-3">
    <label class="form-label">Title</label>
    <input name="title" class="form-control" value="<%= event.title %>" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Description</label>
    <textarea name="description" class="form-control" required><%= event.description %></textarea>
  </div>
  <div class="mb-3">
    <label class="form-label">Date</label>
    <input type="date" name="date" class="form-control" value="<%= event.date %>" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Full Price Tickets (Quantity)</label>
    <input type="number" name="full_qty" class="form-control" value="<%= event.full_qty %>" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Full Price</label>
    <input type="number" name="full_price" class="form-control" value="<%= event.full_price %>" step="0.01" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Concession Tickets (Quantity)</label>
    <input type="number" name="conc_qty" class="form-control" value="<%= event.conc_qty %>" required>
  </div>
  <div class="mb-3">
    <label class="form-label">Concession Price</label>
    <input type="number" name="conc_price" class="form-control" value="<%= event.conc_price %>" step="0.01" required>
  </div>
  <button class="btn btn-primary">Submit Changes</button>
  <a href="/organiser" class="btn btn-secondary">Back</a>
</form>
<%- include('partials/footer') %>
